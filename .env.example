# Application
APP_ENV=production
PORT=8000
WORKERS=2

# Security
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# Download limits
MAX_FILE_SIZE=1000M
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_TIMEOUT=300

# yt-dlp updates (opcional)
AUTO_UPDATE_YTDLP=true

# Cookies para YouTube (opcional, para evitar bloqueos anti-bot)
# Extrae cookies de tu navegador y monta el archivo en /app/cookies.txt
COOKIE_FILE=/app/cookies.txt